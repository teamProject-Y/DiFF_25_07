<!DOCTYPE mapper
 PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


	<insert id="writeArticle" parameterType="map">
		INSERT INTO article
		SET
		regDate = NOW(),
		updateDate = NOW(),
		memberId = #{memberId},
	</insert>

	<delete id="deleteArticle" parameterType="int">
		DELETE FROM article
		WHERE id = #{id}
	</delete>

	<update id="modifyArticle" parameterType="map">
		UPDATE article
		<set>
			<if test="title != null and title != ''">title = #{title},</if>
			<if test="body != null and body != ''">`body` = #{body},</if>
			updateDate = NOW()
		</set>
		WHERE id = #{id}
	</update>

		FROM article
		WHERE id = #{id}
	</select>

		ON A.memberId = M.id
			AND A.boardId = #{boardId}
		</if>
		</if>
	</select>

		ON A.memberId = M.id
		</if>
		</if>
		</if>
	</select>

	</select>

		FROM article
	</select>
		FROM article
	</select>

</mapper>